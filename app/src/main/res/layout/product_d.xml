<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/pdheader"
        android:layout_marginTop="30dp"
        android:text="PRODUCT DETAILS"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pdheader"
        android:layout_height="wrap_content"
        android:id="@+id/product_details_image"
        android:src="@drawable/product"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/layout1"
        android:layout_below="@+id/product_details_image"
        android:background="#e1dfdf">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonny camera"
            android:textSize="18dp"
            android:id="@+id/product_details_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R7 999, 999"
            android:layout_below="@+id/product_details_name"
            android:textSize="18dp"
            android:id="@+id/product_details_price"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Buy"
            android:id="@+id/product_details_btnbuy"
            android:background="#c64618"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_below="@+id/layout1"
        android:textSize="20dp"
        android:id="@+id/pdheader1"
        android:layout_marginTop="5dp"
        android:text="PRODUCT DETAILS"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="
        28 mega px
        willd lecense
        cdsdsdsds
        sdsdsd"
        android:layout_below="@+id/pdheader1"
        android:textSize="18dp"
        android:id="@+id/product_details_description"/>



</RelativeLayout>
